<% include partials/header %>

<div class="container">
  <div class="row">
    <% Articles.forEach(function(article){ %>
    <div class="col-sm-4">
      <div class="card">
        <img src="<%= article.thumbnail %>" alt="FamilyTreeImage" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <small class="text-muted">
            <p> <i class="far fa-clock"> <%= article.date %></i>
          </small></p>
          <p class="card-text"><%= article.description %></p>
          <a href="<%= article.route %>" class="btn btn-primary">Mehr</a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<% include partials/footer %>